{
  "scripts": {
    "install:client": "cd client && npm ci",
    "install:server": "cd server && npm ci",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run start:dev",
    "postinstall": "concurrently \"npm:install:server\" \"npm:install:client\"",
    "dev": "concurrently --kill-others \"npm:dev:server\" \"npm:dev:client\""
  },
  "devDependencies": {
    "@types/node": "^20.2.5",
    "concurrently": "^8.0.1"
  }
}

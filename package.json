{
  "scripts": {
    "install:client": "cd client && npm ci",
    "install:server": "cd server && npm ci",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "build:server": "cd server && npm run build",
    "build:client": "cd client && npm run build",
    "postinstall": "concurrently \"npm:install:server\" \"npm:install:client\"",
    "dev": "concurrently --kill-others \"npm:dev:server\" \"npm:dev:client\"",
    "build": "concurrently \"npm:build:server\" \"npm:build:client\"",
    "start": "cd server && npm install && npm start"
  },
  "devDependencies": {
    "concurrently": "^8.0.1"
  }
}
